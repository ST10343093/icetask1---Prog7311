@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-4">
    <!-- Hero Section -->
    <div class="row mb-5">
        <div class="col-lg-12">
            <div class="card shadow-lg border-0 overflow-hidden">
                <div class="row g-0">
                    <div class="col-md-7 p-5 d-flex flex-column justify-content-center">
                        <h1 class="display-4 fw-bold" style="color: var(--secondary-color);">
                            Manage Tasks <span style="color: var(--primary-color);">Effortlessly</span>
                        </h1>
                        <p class="lead mt-3 mb-4">
                            Stay organized, track progress, and boost your productivity with our intuitive task management solution.
                        </p>
                        <div class="d-flex gap-3">
                            <a asp-controller="ToDoTasks" asp-action="Index" class="btn btn-primary btn-lg px-4 py-2 shadow-sm">
                                <i class="fas fa-list-check me-2"></i> View Tasks
                            </a>
                            <a asp-controller="ToDoTasks" asp-action="Create" class="btn btn-outline-primary btn-lg px-4 py-2">
                                <i class="fas fa-plus me-2"></i> Create New Task
                            </a>
                        </div>
                    </div>
                    <div class="col-md-5 bg-primary d-none d-md-block">
                        <div class="p-5 text-center text-white h-100 d-flex flex-column justify-content-center" style="background-color: var(--primary-color);">
                            <i class="fas fa-tasks fa-5x mb-4"></i>
                            <h2 class="h4 fw-bold">Streamline Your Workflow</h2>
                            <p class="mt-3">Organize, prioritize, and complete tasks on time.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Features Section -->
    <div class="row mb-5">
        <div class="col-12 text-center mb-4">
            <h2 class="h3 fw-bold page-title">Key Features</h2>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 border-0 shadow-sm task-card">
                <div class="card-body text-center p-4">
                    <div class="rounded-circle bg-primary bg-opacity-10 p-3 mb-3 mx-auto" style="width: 80px; height: 80px;">
                        <i class="fas fa-list-check fa-2x" style="color: var(--primary-color);"></i>
                    </div>
                    <h3 class="card-title h5 fw-bold">Task Organization</h3>
                    <p class="card-text">Create, categorize, and manage tasks with ease.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 border-0 shadow-sm task-card">
                <div class="card-body text-center p-4">
                    <div class="rounded-circle bg-primary bg-opacity-10 p-3 mb-3 mx-auto" style="width: 80px; height: 80px;">
                        <i class="fas fa-chart-line fa-2x" style="color: var(--primary-color);"></i>
                    </div>
                    <h3 class="card-title h5 fw-bold">Progress Tracking</h3>
                    <p class="card-text">Monitor your progress and stay on top of deadlines.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 border-0 shadow-sm task-card">
                <div class="card-body text-center p-4">
                    <div class="rounded-circle bg-primary bg-opacity-10 p-3 mb-3 mx-auto" style="width: 80px; height: 80px;">
                        <i class="fas fa-bell fa-2x" style="color: var(--primary-color);"></i>
                    </div>
                    <h3 class="card-title h5 fw-bold">Reminders</h3>
                    <p class="card-text">Never miss an important deadline with timely reminders.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Start Section -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm p-4 bg-light">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-lg-8">
                            <h3 class="h4 fw-bold">Ready to get started?</h3>
                            <p class="mb-lg-0">Begin organizing your tasks and boost your productivity today.</p>
                        </div>
                        <div class="col-lg-4 text-lg-end mt-3 mt-lg-0">
                            <a asp-controller="ToDoTasks" asp-action="Create" class="btn btn-primary px-4 py-2">
                                <i class="fas fa-plus me-2"></i> Create Your First Task
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>